<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ndesigne.jobig2">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".injection.JobIgApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.Incription.InscriptionActivity"
            android:label="@string/title_activity_instription"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".presentation.acceuil.AcceuilActivity"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".presentation.offre.OffreActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>


        <activity
            android:name=".presentation.main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>